@model DapperMvcDemo.Data.Models.Domain.Person

@{
    ViewData["Title"] = "Edit Person";
    var departments = ViewBag.Departments as List<DapperMvcDemo.Data.Models.Domain.Department>;
}

<h2>Edit Person</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
    </div>

    <div class="form-group">
        <label for="DeptId">Department</label>
        <select class="form-control" asp-for="DeptId" asp-items="@(new SelectList(departments, "DeptId", "DeptName", Model.DeptId))">
            <option value="">-- Select Department --</option>
        </select>
        <span asp-validation-for="DeptId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="DisplayAll" class="btn btn-secondary">Cancel</a>
</form>
